<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.toreo.torero.PaymentActivity">

    <TextView
        android:id="@+id/DisplayTextName"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="40dp">
    </TextView>

    <TextView
        android:id="@+id/DisplayTextLast"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="80dp">
    </TextView>



    <TextView
        android:id="@+id/DisplayTextStreet"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_marginTop="160dp">
    </TextView>

    <TextView
        android:id="@+id/DisplayTextNum"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="160dp">
    </TextView>

    <TextView
        android:id="@+id/DisplayTextColonia"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="200dp">
    </TextView>

    <TextView
        android:id="@+id/DisplayTextDelegacion"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="240dp">
    </TextView>

    <TextView
        android:id="@+id/DisplayTextJuzgado"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="280dp">
    </TextView>

    <TextView
        android:id="@+id/DisplayTextItinerante"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"/>


    <Button
        android:id="@+id/ButtonSendPayment"
        android:layout_height="wrap_content"
        android:layout_width="120dp"
        android:text="@string/button"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="20dp"
        android:background="#4CAF50">
    </Button>

</FrameLayout>
